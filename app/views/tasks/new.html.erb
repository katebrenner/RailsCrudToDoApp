<%= form_for @task do |f| %>
  <%= f.text_field :name, placeholder: "Name" %>
  <%= f.text_field :details, placeholder: "details" %>
  <%= f.text_field :completeby, placeholder: "When do you want to do this by?" %>
  Priority: <%= f.collection_select :priority_id, Priority.order(:priority), :id, :priority%>
  <%= f.submit "ADD IT!"%>
<% end %>

